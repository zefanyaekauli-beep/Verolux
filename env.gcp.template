# GCP Configuration Template
# Copy this file to .env.gcp and fill in your values

GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Deployment Type (gke, compute, cloudrun)
DEPLOYMENT_TYPE=compute

# Domain Configuration
DOMAIN=verolux.yourdomain.com

# Cloud SQL
CLOUD_SQL_INSTANCE=verolux-db
DB_USER=verolux
DB_PASSWORD=your-secure-password
DB_NAME=verolux
DB_HOST=127.0.0.1

# Redis/Memorystore
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=your-redis-password

# Cloud Storage
GCS_BUCKET=verolux-storage

# Application Version
VERSION=latest

# Service Account
SERVICE_ACCOUNT_EMAIL=verolux-sa@your-project-id.iam.gserviceaccount.com

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring
ENABLE_MONITORING=true
ENABLE_LOGGING=true

# Scaling
MIN_INSTANCES=1
MAX_INSTANCES=10
TARGET_CPU_UTILIZATION=0.75






















