# Verolux Configuration API - Dockerfile
# Gate configuration and system settings management
FROM python:3.10-slim

LABEL maintainer="Verolux Enterprise"
LABEL description="Configuration API for gate rules and system settings"

# Set environment
ENV PYTHONUNBUFFERED=1
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip
RUN pip3 install --no-cache-dir --upgrade pip setuptools wheel

# Set working directory
WORKDIR /app

# Copy requirements
COPY Backend/requirements.txt .

# Install Python dependencies
RUN pip3 install --no-cache-dir -r requirements.txt

# Install additional configuration libraries
RUN pip3 install --no-cache-dir \
    pyyaml \
    jsonschema \
    google-cloud-storage \
    google-cloud-secret-manager \
    psycopg2-binary \
    sqlalchemy

# Copy application code
COPY Backend/config_api.py .
COPY Backend/zone_utils.py .

# Copy configuration files
COPY Backend/config/*.json /app/config/ 2>/dev/null || :

# Create necessary directories
RUN mkdir -p /app/config /app/backups /app/logs

# Set permissions
RUN chmod +x /app/*.py

# Expose port
EXPOSE 8005

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8005/health || exit 1

# Start application
CMD ["python3", "-m", "uvicorn", "config_api:app", \
     "--host", "0.0.0.0", \
     "--port", "8005", \
     "--workers", "1"]
























